# =============================================================================
# tCredex Frontend Environment Variables
# Copy this to .env.local and fill in your values. NEVER commit .env.local!
# =============================================================================

# ---------- Backend API (required) ----------
# Development: http://127.0.0.1:8080
# Production:  https://api.tcredex.com
NEXT_PUBLIC_API_URL=http://127.0.0.1:8080

# ---------- Supabase (required) ----------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ---------- Maps (required for map features) ----------
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-token

# ---------- Email (required for outreach) ----------
RESEND_API_KEY=your-resend-key

# ---------- AI Chat (optional — for ChatTC) ----------
OPENAI_API_KEY=sk-your-openai-api-key
# CHAT_MODEL=gpt-4o-mini

# ---------- Site URL ----------
NEXT_PUBLIC_SITE_URL=https://tcredex.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ---------- Analytics (optional — all disabled if unset) ----------
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_META_PIXEL_ID=your-pixel-id
# NEXT_PUBLIC_LINKEDIN_PARTNER_ID=your-partner-id
# NEXT_PUBLIC_BING_UET_ID=your-uet-id

# ---------- External APIs (optional) ----------
# NEXT_PUBLIC_GOOGLE_PLACES_API_KEY=your-google-places-key
# SAM_GOV_API_KEY=your-sam-gov-key

# ---------- LiveKit (optional — for video rooms) ----------
# NEXT_PUBLIC_LIVEKIT_URL=wss://your-livekit.livekit.cloud
# LIVEKIT_API_KEY=your-api-key
# LIVEKIT_API_SECRET=your-api-secret

# ---------- Stripe (optional — for subscriptions) ----------
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...
# STRIPE_PRICE_STARTER=price_...
# STRIPE_PRICE_PROFESSIONAL=price_...
# STRIPE_PRICE_ENTERPRISE=price_...

# ---------- Ledger / Blockchain (optional) ----------
# LEDGER_BLOCKCHAIN_ENABLED=false
# LEDGER_GITHUB_TOKEN=ghp_...
# LEDGER_GITHUB_GIST_ID=your-gist-id
# LEDGER_ESCROW_EMAIL=escrow@tcredex.com
# CRON_SECRET=your-cron-secret

# ---------- Redis / Rate Limiting (optional) ----------
# UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your-redis-token

# ---------- Discord Webhooks (optional — team notifications) ----------
# DISCORD_WEBHOOK_DEALS=https://discord.com/api/webhooks/...
# DISCORD_WEBHOOK_LOI=https://discord.com/api/webhooks/...
# DISCORD_WEBHOOK_CLOSING=https://discord.com/api/webhooks/...
# DISCORD_WEBHOOK_ALERTS=https://discord.com/api/webhooks/...
# DISCORD_WEBHOOK_GENERAL=https://discord.com/api/webhooks/...

# ---------- Calendly (optional — demo booking) ----------
# NEXT_PUBLIC_CALENDLY_URL=https://calendly.com/your-username/demo

# ---------- Feature Flags ----------
# SAM_GOV_CHECK_ENABLED=false
# DISABLE_EMAILS=false
# NEXT_PUBLIC_ENABLE_PERF_MONITORING=false
